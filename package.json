{
  "name": "jskatas.org",
  "version": "2.0.0",
  "description": "jskatas.org site",
  "scripts": {
    "test": "kavun `bash -c 'ls src/**/*spec.js'` --reporter=minimal",
    "_mkdirs": "mkdir -p dist; mkdir -p tmp; mkdir -p dist/rss",
    "build": "npm run build:html && npm run build:css && npm run build:js && npm run build:media",
    "build:html": "npm run _mkdirs; node -r esm -r ./src/server/window.js ./src/server/index.js > tmp/ssr-result.html && node -r esm scripts/build.js",
    "build:css": "npm run _mkdirs; cp src/style.css dist",
    "build:js": "npm run _mkdirs; cd src; echo $PWD; FILES=`ls {,browser/,components/}*.js`; tar -cf - $FILES | tar -C ../dist -xvf -",
    "build:media": "npm run _mkdirs; cp -R CNAME src/favicon.ico src/components dist",
    "build:rss": "npm run _mkdirs && babel-node src/rss-feed.js > dist/rss/MostRecent.xml",
    "start": "ws --cors.origin=* --port 9779 --directory src",
    "start:dist": "ws --cors.origin=* --port 9779 --directory dist",
    "prerelease": "to-do-list-checker && npm test",
    "release": "to-do-list-checker && npm version major",
    "format-code": "prettier . --write \"{src,scripts}/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wolframkriesing/jskatas.org.git"
  },
  "keywords": [
    "kata",
    "es1",
    "es2",
    "es3",
    "es5",
    "es6",
    "es7",
    "es8",
    "es9",
    "es10",
    "javascript"
  ],
  "author": "Wolfram Kriesing",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tddbin/es6katas.org/issues"
  },
  "homepage": "https://github.com/tddbin/es6katas.org",
  "devDependencies": {
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "kavun": "^3.0.0",
    "local-web-server": "^3.0.1",
    "prettier": "^1.18.2",
    "to-do-list-checker": "^4.0.0"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  }
}
